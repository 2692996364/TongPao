<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_comment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/name_comment"
        app:layout_constraintTop_toTopOf="@id/img_comment"
        app:layout_constraintLeft_toRightOf="@id/img_comment"
        android:text="知初"
        android:textStyle="bold"
        android:textColor="@color/color_black"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/date_comment"
        app:layout_constraintTop_toBottomOf="@id/name_comment"
        app:layout_constraintLeft_toLeftOf="@id/name_comment"
        android:layout_marginTop="10dp"
        android:text="2020-09-12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/level_comment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name_comment"
        app:layout_constraintBottom_toBottomOf="@id/date_comment"
        app:layout_constrainedHeight="true"
        android:text="0"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        app:layout_constraintTop_toTopOf="@id/level_comment"
        app:layout_constraintRight_toLeftOf="@id/level_comment"
        android:layout_marginRight="10dp"
        android:src="@mipmap/f"
        android:layout_width="20dp"
        android:layout_height="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>